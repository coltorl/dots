*{
	font-size: 14px;
	font-family: FiraCode Nerd Font;
}

window#waybar {
	background: #292b2e;
	color: #fdf6e3;
}

#workspaces,
#clock,
#pulseaudio,
#battery,
#tray {
	background: #1a1a1a;
}

#workspaces button {
	padding: 0 2px;
	color: #fdf6e3;
}

#workspaces button.focused {
	color: #268bd2;
}

#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}

#workspaces button:hover {
	background: #1a1a1a;
	border: #1a1a1a;
	padding: 0 3px;
}

#pulseaudio {
	color: #268bd2;
}

#battery {
	color: #859900;
}

#clock,
#pulseaudio,
#battery,
{
	padding: 0 10px;
}
